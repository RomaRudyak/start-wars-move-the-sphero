<Window x:Class="SWMS.Configuration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        
        >
    <Window.Resources>

    </Window.Resources>
    <Border
        BorderThickness="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Orientation="Horizontal">
                <Image 
                    Source="Images/kinect.png" 
                    VerticalAlignment="Center"/>
                <Label 
                    x:Name="KinectStatus"
                    Content="Not conected" 
                    VerticalAlignment="Center"/>

            </StackPanel>

            <Viewbox 
                Grid.Column="0"
                Grid.Row="1">
                <Image 
                    x:Name="KinectViewSpace"/>
            </Viewbox>

            <StackPanel
                Grid.Column="1"
                Grid.Row="0"
                Orientation="Horizontal">
                <Image 
                    Source="Images/sphero.jpg" 
                    VerticalAlignment="Center"/>
                
                <Label 
                    x:Name="SpheroName" 
                    VerticalAlignment="Center"
                    Content="Connectring..."/>

            </StackPanel>


            <DockPanel
                Grid.Column="1"
                Grid.Row="1"
                LastChildFill="True"
                >

                <TextBlock
                    DockPanel.Dock="Top"
                    Text="{Binding ElementName=SpheroAngle, Path=Value, StringFormat={}Angle: {0}, UpdateSourceTrigger=PropertyChanged}"
                    />

                <Slider
                    x:Name="SpheroAngle"
                    DockPanel.Dock="Top"
                    Minimum="0"
                    Maximum="360"
                    Value="0"
                    IsSnapToTickEnabled="True"
                    TickFrequency="1"
                    TickPlacement="Both"
                    ValueChanged="SpheroAngle_ValueChanged"
                    />

                <TextBlock
                    DockPanel.Dock="Top"
                    Text="{Binding ElementName=SpheroSpeed, Path=Value, StringFormat={}Speed: {0}, UpdateSourceTrigger=PropertyChanged}"
                    />

                <Slider
                    DockPanel.Dock="Top"
                    x:Name="SpheroSpeed"
                    Minimum="0"
                    Maximum="255"
                    Value="105"
                    IsSnapToTickEnabled="True"
                    TickFrequency="1"
                    TickPlacement="Both"
                    />
                <Button 
                    DockPanel.Dock="Top"
                    Content="Begin Configuration" 
                    Click="BeginConfigurationButton_OnClick"/>
                <Button 
                    DockPanel.Dock="Top"
                    Content="End Configuration" 
                    Click="ConfiguredButton_OnClick"/>
                <DockPanel
                    VerticalAlignment="Stretch"
                    >
                    <Canvas 
                        Height="300"
                        Width="300"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                        <Label Content="XY" />
                        <Label Content="X" Canvas.Left="0" Canvas.Top="120" />
                        <Label Content="Y" Canvas.Left="120" Canvas.Top="0" />
                        <Line X1="0" Y1="150" X2="300" Y2="150" Stroke="Black"/>
                        <Line X1="150" Y1="0" X2="150" Y2="300" Stroke="Black"/>
                        <Ellipse x:Name="ProectionPoint" Height="10" Width="10" Fill="Red" Canvas.Left="145" Canvas.Top="145"/>
                        <Ellipse x:Name="SpheroPoint" Height="10" Width="10" Fill="Gray" Canvas.Left="145" Canvas.Top="145"/>
                        <Ellipse x:Name="ProectionHead" Height="10" Width="10" Fill="Blue" Canvas.Left="145" Canvas.Top="145"/>
                        <Ellipse x:Name="ProectionHandRight" Height="10" Width="10" Fill="Green" Canvas.Left="145" Canvas.Top="145"/>
                        <Ellipse x:Name="ProectionHandLeft" Height="10" Width="10" Fill="Green" Canvas.Left="145" Canvas.Top="145"/>
                    </Canvas>
                </DockPanel>
            </DockPanel>

        </Grid>
    </Border>
</Window>
